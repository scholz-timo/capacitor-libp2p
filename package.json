{
  "name": "@frontend/p2p",
  "version": "0.0.1",
  "author": "Timo Scholz",
  "description": "P2P Functionality",
  "main": "./dist/plugin.cjs.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "unpkg": "./dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "FrontendP2p.podspec"
  ],
  "exports": null,
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api P2PProviderPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@chainsafe/libp2p-noise": "^11.0.1",
    "@libp2p/mplex": "^7.1.1",
    "@types/underscore": "^1.11.4",
    "typescript-tuple": "^5.0.1",
    "underscore": "^1.13.6"
  },
  "devDependencies": {
    "@capacitor/android": "^4.0.0",
    "@capacitor/core": "^4.0.0",
    "@capacitor/docgen": "^0.0.18",
    "@capacitor/ios": "^4.0.0",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^1.0.1",
    "@ionic/swiftlint-config": "^1.1.2",
    "eslint": "^7.11.0",
    "prettier": "~2.3.0",
    "prettier-plugin-java": "~1.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "swiftlint": "^1.0.1",
    "typescript": "~4.1.5",
    "tsd": "^0.27.0"
  },
  "peerDependencies": {
    "@capacitor/core": "^4.0.0",
    "@libp2p/websockets": "^5.0.4",
    "@types/ws": "^8.5.4",
    "libp2p": "^0.42.2"
  },
  "tsd": {
		"directory": "ts-test"
	},
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "repository": {
    "url": "https://gitlab.veto.party/veto/application/monorepo.git"
  },
  "publishConfig": {
    "registry": "http://localhost:4873"
  },
  "podspec": {
    "manualDependencies": {
      "Backtrace": [
        "Backtrace",
        "CBacktrace"
      ],
      "Metrics": [
        "CoreMetrics",
        "Metrics"
      ],
      "LibP2P": [
        "COperatingSystem",
        "LibP2P"
      ]
    },
    "overrides": {
      "secp256k1.swift": "secp256k1.swift",
      "swiftstate": "SwiftState",
      "swift-nio": [
        "SwiftNIO",
        "SwiftNIOWebSocket"
      ],
      "swift-nio-extras": "SwiftNIOExtras",
      "swift-atomics": "SwiftAtomics",
      "cryptoswift": "CryptoSwift",
      "swift-collections": "OrderedCollections",
      "swift-protobuf": "SwiftProtobuf",
      "swifteventbus": "SwiftEventBus"
    },
    "nameOverrides": {
      "swift-bases": "bases",
      "swift-cid": "CID",
      "swift-libp2p": "LibP2P",
      "swift-libp2p-websocket": "LibP2PWebSocket",
      "swift-libp2p-core": "LibP2PCore",
      "swift-libp2p-crypto": "LibP2PCrypto",
      "swift-multiaddr": "Multiaddr",
      "swift-multibase": "Multibase",
      "swift-multicodec": "Multicodec",
      "swift-multihash": "Multihash",
      "swift-peer-id": "PeerID",
      "swift-varint": "VarInt",
      "swift-crypto": "Crypto",
      "swift-backtrace": "Backtrace",
      "routing-kit": "RoutingKit",
      "async-kit": "AsyncKit",
      "console-kit": "ConsoleKit",
      "swift-log": "Logging",
      "swift-metrics": "Metrics",
      "swift-noise": "Noise",
      "swift-libp2p-noise": "LibP2PNoise",
      "swift-libp2p-mplex": "LibP2PMPLEX",
      "swift-libp2p-tcp": "LibP2PTCP"
    }
  }
}
